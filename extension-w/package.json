{
  "name": "oryn-w-extension",
  "version": "0.1.0",
  "description": "Oryn-W browser extension tests",
  "private": true,
  "scripts": {
    "test": "jest test/unit",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:integration:real": "jest test/integration-real/extension-wasm.test.js --runInBand --testPathIgnorePatterns=/node_modules/",
    "test:integration:real:visual": "echo 'Opening browser test page...' && chromium-browser test/integration-real/wasm-test-page.html 2>/dev/null || google-chrome test/integration-real/wasm-test-page.html 2>/dev/null || echo 'Please open test/integration-real/wasm-test-page.html in your browser'",
    "test:e2e": "jest test/e2e --runInBand",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:all:with-wasm": "npm run test:unit && npm run test:integration && npm run test:integration:real && npm run test:e2e",
    "test:watch": "jest test/unit --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint *.js test/**/*.js"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/integration-real/"
    ],
    "collectCoverageFrom": [
      "background.js",
      "popup.js",
      "sidepanel.js",
      "!test/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 10000
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/chrome": "^0.0.268",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^24.37.3",
    "sinon": "^21.0.1",
    "sinon-chrome": "^3.0.1"
  }
}
